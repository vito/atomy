test(concurrency)

describe("concurrency"):
  describe("spawn"):
    it("creates an actor that executes a block"):
      a = 0
      spawn: a =! 1
      sleep(0.1)
      a should-be(1)


  describe("<-"):
    it("sends a message to an actor"):
      main = me
      p = spawn:
        receive: n -> main << #ok;
          after(
            1 -> main <- #timeout-inner
          )

      p <- 0

      res =
        receive: x -> x;
          after(2 -> #timeout-outer)

      res should-be(#ok)
